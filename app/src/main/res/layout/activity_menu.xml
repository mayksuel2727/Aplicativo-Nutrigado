<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza_escuro"
    tools:context=".view.MenuPrincipal">

    <ImageButton
        android:id="@+id/btnfechar1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/fechar"
        android:backgroundTint="@color/cinza"
        android:layout_alignParentEnd="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:background="@color/cinza_escuro">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/Cadastro_E_Atualiza"
            android:textColor="@color/cinza"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/cinza_escuro"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btncadastraanimais"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/icone_3" />

            <ImageButton
                android:id="@+id/btnAtualizarFazendas"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/icone_4" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/rebanho"
            android:textColor="@color/cinza"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/cinza_escuro"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnGerenciaNutri"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/icone_5" />

            <ImageButton
                android:id="@+id/btnGerenciaDesmame"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/icone_7" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/cinza_escuro">

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>