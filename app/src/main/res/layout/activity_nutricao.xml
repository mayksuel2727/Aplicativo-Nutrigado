<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Nutricao">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/branco"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/NutricaoAnimal"
            android:gravity="center"
            android:textColor="@color/preto"
            android:textSize="20dp"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/preto"
            android:text="@string/nome"
            android:textSize="17dp"
            />
        <TextView
            android:id="@+id/txtNomeAnimal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/preto"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/preto"
            android:text="@string/brinco"
            android:textSize="17dp"
            />
        <TextView
            android:id="@+id/textNumBrinco"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/preto"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/preto"
            android:textSize="17dp"
            android:text="@string/pesoAtual"
            />
        <EditText
            android:id="@+id/edtPesoAtual"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:textColor="@color/preto"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/preto"
            android:textSize="17dp"
            android:text="@string/sobras"
            />
        <EditText
            android:id="@+id/quantidadeSobras"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:textColor="@color/preto"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/preto"
            android:textSize="17dp"
            android:text="@string/quantidadeAtual"
            />

        <EditText
            android:id="@+id/RacaoColocada"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:textColor="@color/preto"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCadastra"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@color/verde_escuro"
            android:text="@string/cadastra"
            android:textColor="@color/branco"
            android:textSize="19dp" />
    </LinearLayout>


</RelativeLayout>